        "微信集成测试"
      ],
      "priority": 3,
      "modules": [
        "auth-api",
        "users-api",
        "teams-api",
        "levels-api"
      ],
      "testSuites": [
        "tests/api/auth.test.ts",
        "tests/api/users.test.ts",
        "tests/api/teams.test.ts"
      ]
    },
    "Shop-API-AI": {
      "role": "商城系统专家",
      "responsibilities": [
        "商城管理API测试",
        "商品管理API测试",
        "采购流程API测试",
        "库存管理API测试",
        "商品分类和标签测试"
      ],
      "priority": 3,
      "modules": [
        "shops-api",
        "products-api",
        "orders-api",
        "inventory-api",
        "categories-api"
      ],
      "testSuites": [
        "tests/api/shops.test.ts",
        "tests/api/products.test.ts",
        "tests/api/orders.test.ts",
        "tests/api/inventory.test.ts"
      ]
    },
    "Payment-API-AI": {
      "role": "支付系统专家",
      "responsibilities": [
        "积分系统API测试",
