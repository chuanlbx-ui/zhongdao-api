{
  "agents": {
    "PM-AI": {
      "role": "项目经理",
      "responsibilities": [
        "整体项目协调",
        "任务分配和进度跟踪",
        "风险管理和决策",
        "最终报告整合",
        "团队沟通协调"
      ],
      "priority": 1,
      "modules": []
    },
    "Test-AI": {
      "role": "测试专家",
      "responsibilities": [
        "测试策略制定",
        "测试用例设计",
        "测试执行监督",
        "问题分类和评估",
        "测试结果分析"
      ],
      "priority": 2,
      "modules": [
        "test-setup",
        "test-results-analysis",
        "issue-tracking"
      ]
    },
    "User-API-AI": {
      "role": "用户系统专家",
      "responsibilities": [
        "用户认证API测试",
