{
  "name": "zhongdao-mall",
  "version": "1.0.0",
  "description": "多层级供应链社交电商平台",
  "main": "dist/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "start:dev": "tsx watch src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:minimal": "tsx src/scripts/test-data-manager.ts generate --config minimal",
    "db:seed:standard": "tsx src/scripts/test-data-manager.ts generate --config standard",
    "db:seed:comprehensive": "tsx src/scripts/test-data-manager.ts generate --config comprehensive",
    "db:clean": "tsx src/scripts/test-data-manager.ts clean",
    "db:stats": "tsx src/scripts/test-data-manager.ts stats",
    "db:validate": "tsx src/scripts/test-data-manager.ts validate",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:down": "docker-compose down",
    "docs:open": "start http://localhost:3000/api-docs",
    "docs:json": "curl -s http://localhost:3000/api-docs.json | jq . > api-docs.json",
    "remote:exec": "tsx scripts/remote-exec.ts",
    "remote:deploy": "scp scripts/deploy-to-server.sh scripts/check-deploy.sh ecosystem.config.js root@162.14.114.224:/www/wwwroot/zd-api.wenbita.cn/ && ssh root@162.14.114.224 'bash /www/wwwroot/zd-api.wenbita.cn/deploy-to-server.sh'",
    "remote:status": "ssh root@162.14.114.224 'bash /www/wwwroot/zd-api.wenbita.cn/check-deploy.sh'",
    "remote:logs": "ssh root@162.14.114.224 'pm2 logs'",
    "remote:restart": "ssh root@162.14.114.224 'pm2 restart zd-api'",
    "workflow:deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy-simple.ps1 all",
    "workflow:commit": "powershell -ExecutionPolicy Bypass -File scripts/deploy-simple.ps1 commit",
    "workflow:status": "powershell -ExecutionPolicy Bypass -File scripts/deploy-simple.ps1 status",
    "workflow:setup": "powershell -ExecutionPolicy Bypass -File scripts/deploy-simple.ps1 help",
    "sync:server": "bash scripts/sync-to-server.sh",
    "dev:remote": "npm run tunnel:start && npm run dev",
    "tunnel:start": "bash scripts/ssh-tunnel.sh start",
    "tunnel:stop": "bash scripts/ssh-tunnel.sh stop",
    "tunnel:status": "bash scripts/ssh-tunnel.sh status",
    "tunnel:restart": "bash scripts/ssh-tunnel.sh restart",
    "env:switch-local": "node -e \"const fs=require('fs'); fs.copyFileSync('.env.development', '.env.local'); console.log('已切换到本地开发环境 - 运行 npm run dev:local 启动');\"",
    "env:switch-remote": "node -e \"const fs=require('fs'); fs.copyFileSync('.env.remote-dev', '.env.local'); console.log('已切换到远程开发环境 - 运行 npm run dev:local 启动');\"",
    "env:switch-prod": "node -e \"const fs=require('fs'); fs.copyFileSync('.env.production', '.env.local'); console.log('已切换到生产环境 - 运行 npm run dev:prod 启动');\"",
    "env:switch-server": "node -e \"const fs=require('fs'); fs.copyFileSync('.env.server-sync', '.env.local'); console.log('已切换到服务器同步环境 - 运行 npm run dev:prod 启动');\"",
    "dev:local": "set NODE_ENV=development&& tsx watch src/index.ts",
    "dev:prod": "set NODE_ENV=production&& tsx watch src/index.ts",
    "env:list": "echo '可用环境：' && echo '  npm run env:switch-local   - 本地开发环境' && echo '  npm run env:switch-remote  - 远程开发环境（推荐）' && echo '  npm run env:switch-prod    - 生产环境' && echo '  npm run env:switch-server  - 服务器同步环境（新）'",
    "deploy:config-fix": "bash scripts/deploy-and-verify.sh production 162.14.114.224 root /www/wwwroot/zd-api.wenbita.cn",
    "deploy:config-fix:bash": "bash scripts/deploy-and-verify.sh production 162.14.114.224 root /www/wwwroot/zd-api.wenbita.cn",
    "deploy:config-check": "npm run build && echo '编译成功'",
    "admin:setup": "npm run db:migrate && npm run db:seed:standard",
    "bug:expert": "bug-expert.bat",
    "bug:diagnose": "npm run db:validate && npm run db:stats && curl -s http://localhost:3000/health",
    "bug:logs": "pm2 logs zd-api --lines 50",
    "bug:restart": "pm2 restart zd-api && echo '服务已重启，请等待30秒后检查状态'",
    "types:generate": "tsx scripts/generate-types-for-frontend.ts",
    "types:sync": "tsx scripts/generate-types-for-frontend.ts && echo '类型已同步到前端'",
    "mock:generate": "tsx scripts/generate-mock-data.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run tests/api",
    "test:api:auth": "vitest run tests/api/auth.test.ts",
    "test:api:products": "vitest run tests/api/products.test.ts",
    "test:api:points": "vitest run tests/api/points.test.ts",
    "test:api:orders": "vitest run tests/api/orders.test.ts",
    "test:api:watch": "vitest watch tests/api",
    "test:api:all": "npm run test:api:auth && npm run test:api:products && npm run test:api:points && npm run test:api:orders"
  },
  "keywords": [
    "e-commerce",
    "social-commerce",
    "supply-chain",
    "multi-level-marketing",
    "typescript",
    "nodejs",
    "prisma",
    "docker"
  ],
  "author": "Zhongdao Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "^6.19.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.5",
    "@types/express-validator": "^2.20.33",
    "@types/inquirer": "^9.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nodemailer": "^7.0.4",
    "@types/uuid": "^10.0.0",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "inquirer": "^13.0.1",
    "isomorphic-dompurify": "^2.32.0",
    "jest": "^30.2.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.10",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-themes": "^1.4.3",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "autoprefixer": "^10.4.22",
    "fs-extra": "^11.3.2",
    "path": "^0.12.7",
    "postcss": "^8.5.6",
    "supertest": "^7.1.4",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "vitest": "^4.0.15"
  }
}
