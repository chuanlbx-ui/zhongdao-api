# 测试环境配置
NODE_ENV=test

# 数据库配置（使用测试数据库）
DATABASE_URL=mysql://test:test@localhost:3306/zhongdao_test

# JWT配置
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Redis配置（测试环境）
REDIS_URL=redis://localhost:6379/1

# 禁用安全功能以便测试
DISABLE_CSRF=true
DISABLE_RATE_LIMIT=true

# 微信配置（测试）
WECHAT_APP_ID=test-app-id
WECHAT_APP_SECRET=test-app-secret

# 微信支付配置（测试）
WECHAT_MCH_ID=test_mch_id
WECHAT_API_V3_KEY=test_api_v3_key
WECHAT_KEY=test_key

# 支付配置（测试）
WECHAT_PAY_MCH_ID=test-mch-id
WECHAT_PAY_KEY=test-pay-key
ALIPAY_APP_ID=test-alipay-app-id
ALIPAY_PRIVATE_KEY=test-alipay-private-key

# 文件上传配置
UPLOAD_PATH=./tests/uploads
MAX_FILE_SIZE=10485760

# 日志级别
LOG_LEVEL=error

# 其他配置
API_PORT=3000
API_PREFIX=/api/v1